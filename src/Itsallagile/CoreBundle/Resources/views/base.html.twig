<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>{% block title %}Scrumboard{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    {% block styles %}
        <link rel="stylesheet" href="{{ asset('css/bootstrap.css') }}">
        <!-- Le styles -->
        {% stylesheets filter='cssrewrite'
            '@ItsallagileCoreBundle/Resources/public/less/itsallagile.less'
        %}
        <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}

        <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
        <!--[if lt IE 9]>
        <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]-->
    {% endblock %}

    <!-- Le fav and touch icons -->
    <link rel="shortcut icon" href="../assets/ico/favicon.ico">
  </head>

  <body>

    <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container-fluid">
          <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="brand" href="/">Scrumboard</a>
          <div class="nav-collapse collapse">
            <ul class="nav">
              <li><a href="/">Home</a></li>
              <li><a href="/boards/add">Add Scrumboard</a></li>
              <li><a href="/teams/add">Add Team</a></li>
            </ul>
            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
            <p class="navbar-text pull-right">
              Logged in as {{app.user.fullName}}
              | <a href="{{ path('fos_user_security_logout') }}">Logout</a>
            </p>
            {% endif %}
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>

    <div class="container-fluid">
 	{% block body %}{% endblock %}

    </div> <!-- /container -->

    {% block endscript %}        
        {% javascripts
            '@ItsallagileCoreBundle/Resources/public/js/jquery.js'
            '@ItsallagileCoreBundle/Resources/public/js/jquery-ui.js'
            '@ItsallagileCoreBundle/Resources/public/js/jquery.ui.touch-punch.js'
            '@ItsallagileCoreBundle/Resources/public/js/json2.js'
            '@ItsallagileCoreBundle/Resources/public/js/underscore.js'
            '@ItsallagileCoreBundle/Resources/public/js/backbone.js'
            '@ItsallagileCoreBundle/Resources/public/js/base.js'
        %}
        <script type="text/javascript" src="{{ asset_url }}"></script>        
        {% endjavascripts %}
        <script src="{{ asset('js/bootstrap.js') }}"></script>
    {% endblock %}
  </body>

</html>
